# Listmonk instance (no trailing slash)
LISTMONK_HOST=https://listmonk.studiokiln.io
# API user + token from Listmonk Admin -> Settings -> API
LISTMONK_API_USER=
LISTMONK_API_TOKEN=
# Exact name of the list in Listmonk (e.g. Signal)
LIST_NAME=Signal
# Your site RSS feed
RSS_FEED=https://kiln.studio/rss.xml
# GitHub repo for persisting LAST_UPDATE (owner/repo)
GH_REPOSITORY=your-org/kiln-portfolio
# GitHub PAT with repo scope + Actions Variables write
GH_TOKEN=
# Minutes to delay send after creating draft (default 30)
DELAY_SEND_MINS=45
# Optional: Pushover for review alerts
# PUSHOVER_USER_KEY=
# PUSHOVER_API_TOKEN=
