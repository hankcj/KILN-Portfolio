# Ghost webhook signing secret (must match the Secret in Ghost Integrations → Listmonk → webhook)
GHOST_WEBHOOK_SECRET=

# Listmonk API (same user/token as listmonk-rss; list ID from Listmonk Lists UI or GET /api/lists)
LISTMONK_URL=https://listmonk.studiokiln.io
LISTMONK_API_USER=
LISTMONK_API_TOKEN=
LISTMONK_LIST_ID=1

# Base URL for "Read on KILN" links in the email (no trailing slash)
SIGNAL_BASE_URL=https://kiln.studio

# Optional: port for the bridge (default 3001)
# PORT=3001

# Optional: minutes to delay send; if set, campaign is created then scheduled for now + N minutes
# DELAY_SEND_MINS=30
