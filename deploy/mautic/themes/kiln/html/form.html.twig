{% extends "@themes/"~template~"/html/base.html.twig" %}

{% block content %}
    {% if message is defined %}
        <div style="max-width:600px; margin:0 auto; padding:16px 24px;">
            <p style="font-family:'Inter','Helvetica Neue',Helvetica,Arial,sans-serif; font-size:14px; color:#C4BEB4;">{{ message|raw }}</p>
        </div>
    {% endif %}

    <div style="max-width:600px; margin:0 auto; padding:48px 24px;">
        {% if header is defined %}
        <h4 style="font-family:'Averia Serif Libre',Georgia,'Times New Roman',serif; font-size:24px; color:#FAF6F0; margin:0 0 24px 0; letter-spacing:-0.01em;">{{ header }}</h4>
        {% endif %}
        {{ content|raw }}
    </div>
{% endblock %}
